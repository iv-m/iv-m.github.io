{
  "locals": {
    "url": "http://iv-m.github.io",
    "name": "iv goes technical",
    "owner": "Ivan A. Melnikov",
    "description": "Some stuff I'd like to share"
  },
  "port": "8081",
  "plugins": [
    "./node_modules/wintersmith-markdown-it/",
    "./plugins/hacks.coffee"
  ],
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "ignore": [
      "**/.ipynb*/**",
      "README*"
  ],
  "pug": {
    "pretty": true
  },
  "markdown-it": {
    "markdown-it-sub": {},
    "markdown-it-sup": {},
    "markdown-it-abbr": {},
    "markdown-it-emoji": {},
    "markdown-it-footnote": {},
    "markdown-it-anchor": {
        "level": 2,
        "permalink": true,
        "permalinkClass": "header-anchor",
        "permalinkSymbol": "Â¶"
    },
    "markdown-it-table-of-contents": {
        "includeLevel": [2, 3]
    },
    "settings": {
      "html": true,
      "linkify": true,
      "langPrefix": "hljs lang-",
      "typographer": true
    }
  }
}
