doctype html
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title #{ page.title } - #{ locals.name }
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body
    textarea(id="source")= page.markdown
    script(type="text/javascript" src="/js/remark.min.js")
    script(type="text/javascript")
      | var slideshow = remark.create({navigation: {scroll: false,}, highlightStyle: '#{page.metadata.highlightStyle || 'github-gist'}'});
